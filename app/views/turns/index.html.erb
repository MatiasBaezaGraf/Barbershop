<p id="notice"><%= notice %></p>

<h1>Turns</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Barber</th>
      <th>Duracion de turno</th>
      <th>Edit</th>
      <th>P</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turns.each do |turn| %>
      <tr>
        <td><%= turn.time %></td>
        <td><%= turn.barber_id %></td>
        <td><%= turn.count_hours %></td>
        <td><%= turn.edit %></td>
        <td><%= turn.p %></td>
        <td><%= link_to 'Show', turn %></td>
        <td><%= link_to 'Edit', edit_turn_path(turn) %></td>
        <td><%= link_to 'Destroy', turn, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

