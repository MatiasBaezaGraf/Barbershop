  <%= form_with(model: turn) do |form| %>
    <% if turn.errors.any? %>
      <div id="error">
        <h2><%= pluralize(turn.errors.count, "error") %> prohibited this turn from being saved:</h2>

        <ul>
          <% turn.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <h3 class = "paragraph">Elija su horario</h3>

  <% morningcounter = 0%>
  <% eveningconuter = 0%>

  <% Turn.posibles(@occupied, @times, @turn.time, @turn.count_hours, @turn) %>
  <% @times.each do |moment| %>
    <% if moment.hour < 12 %>
      <% morningcounter = morningcounter + 1%>
    <% else %>
      <% eveningconuter = eveningconuter + 1%>
    <% end %>
  <% end %>


  <div class = "flexin">
    <% if morningcounter != 0  %>
      <div class="radio-toolbar">
          <% disabledcounter = 0 %>
          <% start = 0 %>
          <% recorrido = 0%>
          <% Turn.posibles(@occupied, @times, @turn.time, @turn.count_hours, @turn) %>
          <% @times.each do |moment| %>
            <% if start == 0%>
              <div class = "disabled"> Ma√±ana </div>
            <% start = 1%> 
            <% end %>
            <% if moment.hour < 12 %>
              <% busycounter = 0 %>
              <% @occupied.each do |busy| %>
                <% if busy[0] == moment%>
                  <% busycounter = 1%>
                  <% disabledcounter = busy[1] %>
                <% end %>
              <% end %>
              <% if busycounter != 0%>
                <div class = "disabled"> Hola </div>
                <% puts disabledcounter%>
              <% else %>
                <% if disabledcounter > 1%>
                  <div class = "disabled"> Hola </div>
                  <% disabledcounter = disabledcounter - 1%>
                <%else%>
                  <%= form.radio_button :time, moment, as: :string %> 
                  <%= form.label :time, moment.strftime("%H %M"), :value => moment %>
                <% end%>
              <% end%>
              <% recorrido = recorrido + 1%>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <% if eveningconuter != 0%>
        <div class="radio-toolbar">
          <% disabledcounter = 0 %>
          <% start2 = 0 %>
          <% recorrido2 = 0%>
          <% @times.each do |moment| %>
            <% if start2 == 0%>
              <div class = "disabled"> Tarde </div>
              <% start2 = 1%> 
            <% end %>
            <% if moment.hour >= 12 %>
              <% busycounter = 0 %>
              <% @occupied.each do |busy| %>
                <% if busy[0] == moment%>
                  <% busycounter = 1%>
                  <% disabledcounter = busy[1] %>
                <% end %>
              <% end %>
              <% if busycounter != 0%>
                <div class = "disabled"> Hola </div>
                <% puts disabledcounter%>
              <% else %>
                <% if disabledcounter > 1%>
                  <div class = "disabled"> Hola </div>
                  <% disabledcounter = disabledcounter - 1%>
                <%else%>
                  <%= form.radio_button :time, moment, as: :string %> 
                  <%= form.label :time, moment.strftime("%H %M"), :value => moment %>
                <% end%>
              <% end%>
              <% recorrido2 = recorrido2 + 1 %>
            <% end %>
          <% end %>
      </div>
    <% end %>
  </div>
  

