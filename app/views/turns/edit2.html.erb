  <div class = 'alignment'>
    <div class = 'body-login'>

    <br>
    
    <h2 class = "titles-secondary">Personalizar Turno</h2>

    <br>

    <% puts "EaSTE ES EL DIA JUSTO ANTES DE ELEGIR HORARIO", @turn.time%>


    <% invalid = 0%>

    <% if @turn.time == Date.new(2000,1,1) %>
      <% invalid = 1 %>
    <% end %>

    <% if @turn.count_hours == 0 %>
      <% invalid = 1 %>
      <% @turn.time = Date.new(2000,1,1)%> 
    <% end%>

    <% if @turn.client.blank? %>
      <% invalid = 1 %>
    <% end%>

    <% if invalid == 1 %>
      <%= render 'last_form_error', turn: @turn %>
    <% else %>
      <%= render 'last_form', turn: @turn %>
      <% @turn.edit = 2 %>
      <% @turn.save %>
    <% end %>

    <br>
    <br>
    <br>
    <br>

    </div>
  </div>

