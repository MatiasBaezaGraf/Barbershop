<meta name="viewport" content="width=device-width,initial-scale=1">
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

<body leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" rightmargin="0" textalign="center">

  <div class = "navbar3">
        <%= link_to "Atras â®Œ", home_path, class: "but-back" %>
  </div>

  <div class = 'alignment'>
    <div class = 'body-login'>
      <br>
      <h2 class = "titles-secondary">Modificar usuario</h2>
      <br>

      <%= form_for(@user) do |f| %>

        <div class="field">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "Nombre", class: 'input', required: true%>
        </div>
      
        <br>
        <br>

        <div class="field">
          <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "Apellido", class: 'input', required: true %>
        </div>

        <br>
        <br>

        <div class="field">
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: 'input', required: true %>
        </div>

        <br>
        <br>

        <div class="field">
          <%= f.number_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "Numero de telefono", class: 'input', required: true %>
        </div>

        <br>
        <br>

        <div class="field">
          <h3 class = "paragraph">Privilegios de administrador</h3>
          <%= f.select(:admin, @admin, {},{ :class => 'admin_select' })%>
        </div>

        <br>
        <br>

        <div class="actions">
          <%= f.submit "Actualizar", class: 'but-login' %>
        </div>

        <br>
        <br>
        <br>
        <br>

      <% end %>
      
    </div>
  </div>
</body>

