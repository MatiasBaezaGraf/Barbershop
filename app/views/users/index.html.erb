<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %><br/></td>
        <td><%= user.last_name %><br/></td>
        <td><%= user.email %><br/></td>
        <td><%= user.phone_number %><br/></td>
        <% if user.id != current_user.id %>
          <td><%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure"} %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
